{
  "productName": "Quarrel",
  "version": "0.1.0",
  "identifier": "app.quarrel.desktop",
  "build": {
    "frontendDist": "../../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ../web && bun run dev",
    "beforeBuildCommand": "cd ../web && VITE_API_URL=https://api.quarrel.app VITE_WS_URL=wss://api.quarrel.app/ws ../../node_modules/.bin/vite build"
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.quarrel.app wss://api.quarrel.app https://*.quarrel.app; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:"
    },
    "windows": [
      {
        "title": "Quarrel",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
